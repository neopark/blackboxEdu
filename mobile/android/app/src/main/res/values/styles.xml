  <style
    name="basic_boot_splash_theme"
    parent="Theme.SplashScreen">
    <item name="windowSplashScreenBackground">@color/basic</item>
    <item name="windowSplashScreenAnimatedIcon">@mipmap/basic_boot_splash_logo</item>
    <item name="postSplashScreenTheme">@style/AppTheme</item>
  </style>
  <style
    name="pro_boot_splash_theme"
    parent="Theme.SplashScreen">
    <item name="windowSplashScreenBackground">@color/white</item>
    <item name="windowSplashScreenAnimatedIcon">@mipmap/pro_boot_splash_logo</item>
    <item name="postSplashScreenTheme">@style/AppTheme</item>
  </style>
